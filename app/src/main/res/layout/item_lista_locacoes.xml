<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtNomeCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_toLeftOf="@id/txtDataDevolucao"
            android:layout_alignParentLeft="true"
            android:textSize="24sp"
            android:text="Teste"/>

        <TextView
            android:id="@+id/txtDataDevolucao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:text="Teste"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/txtNomeFuncionario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:layout_toLeftOf="@id/txtDataLocacao"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:text="Teste"/>

        <TextView
            android:id="@+id/txtDataLocacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:textSize="16sp"
            android:text="Teste"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>
